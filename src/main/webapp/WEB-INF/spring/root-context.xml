	<bean name="zwaveTransport" class="net.gregrapp.jhouse.transports.serial.SerialImpl">
		<constructor-arg>
			<list>
				<value>/dev/tty.SLAB_USBtoUART</value>
				<value>115200</value>
			</list>
		</constructor-arg>
	</bean>
 -->
 	<bean name="zwaveTransport" class="net.gregrapp.jhouse.transports.tcpclient.TCPClientImpl">
		<constructor-arg>
			<list>
				<value>192.168.0.3</value>
				<value>5000</value>
			</list>
		</constructor-arg>
	</bean>
 
	<bean name="zwaveInterface" class="net.gregrapp.jhouse.interfaces.zwave.ZwaveInterface">
		<constructor-arg ref="zwaveTransport" />
	</bean>

	<bean name="dscIt100Transport" class="net.gregrapp.jhouse.transports.tcpclient.TCPClientImpl">
		<constructor-arg>
			<list>
				<value>tristar.crazynoodle.net</value>
				<value>5000</value>
			</list>
		</constructor-arg>
	</bean>

	<bean name="dscIt100Interface" class="net.gregrapp.jhouse.interfaces.dscit100.DSCIT100Interface">
		<constructor-arg ref="dscIt100Transport"/>
	</bean>
	
	<import resource="devices.xml"/>
	
	<bean name="deviceManager" class="net.gregrapp.jhouse.managers.device.DeviceManagerImpl" />

	<bean name="stateManager" class="net.gregrapp.jhouse.managers.state.StateManagerImpl" />

	<bean name="eventManager" class="net.gregrapp.jhouse.managers.event.EventManagerImpl">
		<constructor-arg ref="ksession" />
  		<property name="deviceManager" ref="deviceManager" />
	</bean>

	<drools:kbase id="kbase">
		<drools:resources>
			<drools:resource type="DSL" source="classpath:jhouse.dsl" />
			<drools:resource type="DRL" source="classpath:config.drl" />
			<drools:resource type="DSLR" source="classpath:rules.dslr" />
		</drools:resources>
		<drools:configuration>
			<drools:event-processing-mode mode="STREAM" />
		</drools:configuration>
	</drools:kbase>

	<drools:ksession id="ksession" type="stateful" name="ksession"
		kbase="kbase">
		<drools:script>
			<drools:fire-until-halt />
		</drools:script>
	</drools:ksession>
</beans>
