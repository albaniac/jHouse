<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->

	<context:annotation-config />

	<bean name="zwaveTransport" class="net.gregrapp.jhouse.transports.serial.SerialImpl">
		<constructor-arg>
			<list>
				<value>/dev/tty.SLAB_USBtoUART</value>
				<value>115200</value>
			</list>
		</constructor-arg>
	</bean>

	<bean name="zwaveInterface" class="net.gregrapp.jhouse.interfaces.zwave.ZwaveInterface">
		<constructor-arg ref="zwaveTransport"/>
	</bean>
	
	<bean name="dinningRoomLight" class="net.gregrapp.jhouse.device.drivers.ZwaveBinarySwitch">
		<constructor-arg value="1" />
		<constructor-arg ref="zwaveInterface"/>
		<constructor-arg value="14" />
	</bean>
	
	<bean name="deviceManager" class="net.gregrapp.jhouse.managers.DeviceManagerImpl" />
</beans>
