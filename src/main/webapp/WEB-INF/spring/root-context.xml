<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:drools="http://drools.org/schema/drools-spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
						http://drools.org/schema/drools-spring http://anonsvn.jboss.org/repos/labs/labs/jbossrules/trunk/drools-container/drools-spring/src/main/resources/org/drools/container/spring/drools-spring-1.2.0.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->

	<context:annotation-config />

	<bean name="zwaveTransport" class="net.gregrapp.jhouse.transports.serial.SerialImpl">
		<constructor-arg>
			<list>
				<value>/dev/tty.SLAB_USBtoUART</value>
				<value>115200</value>
			</list>
		</constructor-arg>
	</bean>

	<bean name="zwaveInterface" class="net.gregrapp.jhouse.interfaces.zwave.ZwaveInterface">
		<constructor-arg ref="zwaveTransport" />
	</bean>

	<bean name="dinningRoomLight" class="net.gregrapp.jhouse.device.drivers.ZwaveBinarySwitch">
		<!-- Unique device ID -->
		<constructor-arg value="1" />
		<!-- Interface bean reference -->
		<constructor-arg ref="zwaveInterface" />
		<!-- ZWave node ID -->
		<constructor-arg value="14" />
	</bean>

	<bean name="deviceManager" class="net.gregrapp.jhouse.managers.device.DeviceManagerImpl" />

	<bean name="stateManager" class="net.gregrapp.jhouse.managers.state.StateManagerImpl" />

	<bean name="eventManager" class="net.gregrapp.jhouse.managers.event.EventManagerImpl">
		<constructor-arg ref="ksession" />
	</bean>
	
	<drools:kbase id="kbase">
		<drools:resources>
			<drools:resource type="DRL" source="classpath:testrules.drl"></drools:resource>
		</drools:resources>
		<drools:configuration>
			<drools:event-processing-mode mode="STREAM" />
		</drools:configuration>
	</drools:kbase>

	<drools:ksession id="ksession" type="stateful" name="ksession"
		kbase="kbase">
	</drools:ksession>
	<!-- <drools:fire-until-halt /> -->
</beans>
