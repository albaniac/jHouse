<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:drools="http://drools.org/schema/drools-spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
						http://drools.org/schema/drools-spring http://anonsvn.jboss.org/repos/labs/labs/jbossrules/trunk/drools-container/drools-spring/src/main/resources/org/drools/container/spring/drools-spring-1.2.0.xsd">

	<bean name="dinningRoomLight" class="net.gregrapp.jhouse.device.drivers.ZwaveBinarySwitch">
		<!-- Unique device ID -->
		<constructor-arg value="1" />
		<!-- Interface bean reference -->
		<constructor-arg ref="zwaveInterface" />
		<!-- ZWave node ID -->
		<constructor-arg value="14" />
	</bean>

	<bean name="kitchenLight" class="net.gregrapp.jhouse.device.drivers.ZwaveBinarySwitch">
		<!-- Unique device ID -->
		<constructor-arg value="2" />
		<!-- Interface bean reference -->
		<constructor-arg ref="zwaveInterface" />
		<!-- ZWave node ID -->
		<constructor-arg value="2" />
	</bean>
</beans>